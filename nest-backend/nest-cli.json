{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "deleteOutDir": true,
        "assets": [
            {
                "include": "../node_modules/.prisma/**/*",
                "outDir": "dist",
                "watchAssets": true
            },
            {
                "include": "../generated/**/*",
                "outDir": "dist",
                "watchAssets": true
            }
        ],
        "watchAssets": true
    }
}
